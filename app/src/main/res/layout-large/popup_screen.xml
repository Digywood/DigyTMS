<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="@dimen/popup_width"
    android:layout_height="@dimen/popup_height"
    android:background="@drawable/popup_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_overlay"
        android:layout_marginBottom="48dp">
        <GridView
            android:id="@+id/scroll_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_margin="8dp"
            android:columnWidth="50dp"
            android:numColumns="auto_fit"
            android:horizontalSpacing="12dp"
            android:verticalSpacing="24dp"
            android:scrollbars="vertical"
            android:stretchMode="spacingWidthUniform">
        </GridView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <Button android:id="@+id/pop_close_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="3sp"
            android:background="@drawable/custom_button"
            android:textColor="#FFFFFF"
            android:text="@string/close_text" />
    </LinearLayout>
</RelativeLayout>