<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:id="@+id/sp_fenrollids"/>

                <TextView
                    android:id="@+id/tv_fcourseid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:hint="courseid"
                    android:layout_margin="2dp"
                    android:layout_weight="3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart2"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="200dp"
                        android:layout_height="200dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Tests"
                                    android:layout_weight="2"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="@color/green"/>

                                <TextView
                                    android:id="@+id/tv_ftottests"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_weight="8"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Attempted"
                                    android:layout_weight="2"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="@color/green"/>

                                <TextView
                                    android:id="@+id/tv_fattempted"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_weight="8"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tests as per Plan"
                                    android:layout_weight="2"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="@color/green"/>

                                <TextView
                                    android:id="@+id/tv_ftestsasplan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_weight="8"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="%"
                                    android:layout_weight="2"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="@color/green"/>

                                <TextView
                                    android:id="@+id/tv_fpercent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_weight="8"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="RAG for Attempts"
                                    android:layout_weight="2"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="@color/green"/>

                                <TextView
                                    android:id="@+id/tv_fRAGattempt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_weight="8"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="RAG for AVG score"
                                    android:layout_weight="2"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:textColor="@color/green"/>

                                <TextView
                                    android:id="@+id/tv_fRAGAVGscore"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="12sp"
                                    android:layout_weight="8"
                                    android:textStyle="bold"
                                    android:textColor="#000000"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.gms.ads.AdView
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        ads:adSize="BANNER"
                        ads:adUnitId="@string/banner_home_footer">

                    </com.google.android.gms.ads.AdView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/bchart2"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_weight="1"
                            android:weightSum="10"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="Max"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="@color/green"/>

                            <TextView
                                android:id="@+id/tv_fmax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="#000000"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_weight="1"
                            android:weightSum="10"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="Min"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="@color/green"/>

                            <TextView
                                android:id="@+id/tv_fmin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="#000000"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_weight="1"
                            android:weightSum="10"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="Avg"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="@color/green"/>

                            <TextView
                                android:id="@+id/tv_favg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="#000000"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_fdetails"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="25dp"
                        android:text="Details >>"
                        android:textSize="12sp"
                        android:background="@drawable/btn_details_bg"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>