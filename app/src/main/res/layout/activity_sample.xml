<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/header"
    tools:context="com.digywood.tms.FlashCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#8e58d1"
                android:layout_weight="4.5"
                android:weightSum="20">

                <Spinner
                    android:id="@+id/fl_sections"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_weight="8.5"
                    android:backgroundTint="@color/white"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/question_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:background="@color/black_overlay"
                    android:alpha="1">
                </androidx.recyclerview.widget.RecyclerView>

                <ImageView
                    android:id="@+id/fl_fullscreen"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="9.5"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    app:srcCompat="@drawable/ic_fullscreen_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1.5">

                    <!--<com.google.android.gms.ads.AdView
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="4dp"
                        ads:adSize="BANNER"
                        ads:adUnitId="@string/banner_home_footer">

                    </com.google.android.gms.ads.AdView>-->

                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:layout_margin="3dp"
                        card:cardCornerRadius="5dp"
                        card:cardElevation="5dp"
                        card:contentPadding="8dp">

                        <ImageView
                            android:id="@+id/fl_ivques"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:orientation="vertical"
                    android:layout_weight="8.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_Qid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:textSize="10sp"
                            android:hint="Qid"
                            android:layout_margin="2dp"
                            android:textColor="#8e58d1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal|center_vertical|center"
                                android:layout_weight="1">
                                <ImageView
                                    android:id="@+id/freport"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_toStartOf="@id/menu"
                                    android:visibility="visible"
                                    app:srcCompat="@drawable/ic_report" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal|center_vertical|center"
                                android:layout_weight="1">
                                <Button
                                    android:id="@+id/btn_groupQues"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/groupletter" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal|center_vertical|center"
                                android:layout_weight="1">
                                <Button
                                    android:id="@+id/btn_exit"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/exit" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/count_shape"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="14sp"
                            android:textStyle="italic|bold"
                            android:background="@drawable/count_textshape"
                            android:textColor="#FFFFFF"
                            android:text="Attempted"/>

                        <TextView
                            android:id="@+id/tv_attemptcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FF0000"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:textSize="16sp"
                            android:padding="4dp"
                            android:hint="00"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/count_shape"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="14sp"
                            android:textStyle="italic|bold"
                            android:background="@drawable/count_textshape"
                            android:textColor="#FFFFFF"
                            android:text="I Know"/>

                        <TextView
                            android:id="@+id/tv_iknowcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FF0000"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:hint="00"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/count_shape"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:gravity="center_horizontal|center_vertical"
                            android:textStyle="italic|bold"
                            android:background="@drawable/count_textshape"
                            android:textColor="#FFFFFF"
                            android:text="I Don't Know"/>

                        <TextView
                            android:id="@+id/tv_idonknowcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FF0000"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:textSize="16sp"
                            android:padding="4dp"
                            android:hint="00"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/count_shape"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:gravity="center_horizontal|center_vertical"
                            android:textStyle="italic|bold"
                            android:background="@drawable/count_textshape"
                            android:textColor="#FFFFFF"
                            android:text="Skipped"/>

                        <TextView
                            android:id="@+id/tv_skippedcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:textColor="#FF0000"
                            android:textSize="16sp"
                            android:padding="4dp"
                            android:hint="00"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="4.5"
                android:weightSum="5">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/test_button_custom"
                    android:textColor="@drawable/test_text_custom"
                    android:text="Previous"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/btn_prev"/>

                <Button
                    android:id="@+id/btn_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:background="@drawable/test_button_custom"
                    android:text="Show Answer"
                    android:textColor="@drawable/test_text_custom" />

                <Button
                    android:id="@+id/btn_iknow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:background="@drawable/test_button_custom"
                    android:text="I Know"
                    android:textColor="@drawable/test_text_custom" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="I Don't Know"
                    android:layout_gravity="bottom"
                    android:background="@drawable/test_button_custom"
                    android:textColor="@drawable/test_text_custom"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/btn_idonknow"/>

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:background="@drawable/test_button_custom"
                    android:textColor="@drawable/test_text_custom"
                    android:text="Next" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>