<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart3"
                    android:layout_width="350dp"
                    android:layout_height="350dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_acourseid"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Tests"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textColor="#8e58d1"/>

                    <TextView
                        android:id="@+id/tv_atottests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Attempted"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textColor="#8e58d1"/>

                    <TextView
                        android:id="@+id/tv_aattempted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tests as per Plan"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textColor="#8e58d1"/>

                    <TextView
                        android:id="@+id/tv_atestsasplan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textColor="#8e58d1"/>

                    <TextView
                        android:id="@+id/tv_apercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Max"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textColor="#8e58d1"/>

                    <TextView
                        android:id="@+id/tv_amax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Min"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textColor="#8e58d1"/>

                    <TextView
                        android:id="@+id/tv_amin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Avg"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textColor="#8e58d1"/>

                    <TextView
                        android:id="@+id/tv_aavg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RAG for Attempts"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textColor="#8e58d1"/>

                    <TextView
                        android:id="@+id/tv_aRAGattempt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RAG for AVG score"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:textColor="#8e58d1"/>

                    <TextView
                        android:id="@+id/tv_aRAGAVGscore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_adetails"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Details >>"
                    android:background="@drawable/btn_details_bg"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>