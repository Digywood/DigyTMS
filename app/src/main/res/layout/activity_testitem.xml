<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_testid"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="testid"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_teststart"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="#000000"
                android:background="@drawable/btn_shape"
                android:text="play"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_testresume"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="#000000"
                android:background="@drawable/btn_shape"
                android:text="Review"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/cb_testselection"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_teststatus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="teststatus"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="12dp"/>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_fteststart"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="#000000"
                android:background="@drawable/btn_shape"
                android:text="Start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_fattempthistory"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="#000000"
                android:background="@drawable/btn_shape"
                android:text="History"/>

        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>