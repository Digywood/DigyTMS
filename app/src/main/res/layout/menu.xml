<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_element"
    android:orientation="vertical"
    android:background="@drawable/popup_elevation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/testName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="TestName:"/>
        <TextView
            android:id="@+id/answered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Branch:"/>

        <TextView
            android:id="@+id/marked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Date:"/>

<!--        <TextView
            android:id="@+id/yetToAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yet to Answer:"/>-->

    <!--android:textColor="@color/white"-->
    <Button android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="3sp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:text="Close" />


</LinearLayout>