<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.digywood.tms.TestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <Spinner
                    android:id="@+id/fl_sections"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical">
                </Spinner>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/question_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:background="@color/black_overlay"
                    android:alpha="1">
                </android.support.v7.widget.RecyclerView>

                <ImageView
                    android:id="@+id/fl_fullscreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    app:srcCompat="@drawable/ic_fullscreen_black_40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">

                    <ImageView
                        android:id="@+id/fl_ivques"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/dummy_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6">


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/margin2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_above="@+id/action_buttons" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/action_buttons"
            android:layout_alignParentBottom="true"
            android:weightSum="4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/test_button_custom"
                android:textColor="@drawable/test_text_custom"
                android:text="Previous"
                android:layout_marginEnd="5dp"
                android:id="@+id/btn_prev"/>

            <Button
                android:id="@+id/btn_iknow"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/test_button_custom"
                android:text="I Know"
                android:textColor="@drawable/test_text_custom" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="I Don't Know"
                android:background="@drawable/test_button_custom"
                android:textColor="@drawable/test_text_custom"
                android:layout_marginEnd="5dp"
                android:id="@+id/btn_idonknow"/>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/test_button_custom"
                android:textColor="@drawable/test_text_custom"
                android:text="Next" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
